{
    "name": "Props",
    "description": "PropsApp: say thank you in a geeky way!",
    "website": "https://github.com/sbrych/props",
    "repository": "https://github.com/sbrych/props",
    "keywords": [
        "ruby",
        "rails",
        "props",
        "app"
    ],
    "env": {
      "APP_DOMAIN": {
        "value": "props.changeme"
      },
      "GAPPS_DOMAIN_NAME": {
        "value": "gapps_domain_name"
      },
      "EMAILS_DEFAULT_FROM": {
        "value": "props@example.com"
      },
      "NEWRELIC_LICENSE_KEY": {
        "value": "newrelic_license_key"
      },
      "OMNIAUTH_KEY": {
        "value": "omniauth_key"
      },
      "OMNIAUTH_SECRET": {
        "value": "omniauth_secret"
      },
      "ROLLBAR_TOKEN": {
        "value": "rollbar_token"
      },
      "SECRET_KEY_BASE": {
        "generator": "secret"
      },
      "SENDGRID_PASSWORD": {
        "value": "sendgrid_password"
      },
      "SENDGRID_USER_NAME": {
        "value": "sendgrid_user_name"
      },
      "SKYLIGHT_TOKEN": {
        "value": "skylight_token"
      },
      "SLACK_DEFAULT_CHANNEL": {
        "value": "default_channel"
      },
      "SLACK_WEBHOOK_URL": {
        "value": "webhook_url"
      }
    },
    "buildpacks": [
      {
        "url": "https://github.com/heroku/heroku-buildpack-nodejs"
      },
      {
        "url": "https://github.com/heroku/heroku-buildpack-ruby"
      }
    ],
    "addons": [
        "heroku-postgresql:hobby-dev"
    ]
}
