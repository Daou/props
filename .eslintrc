{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "registerComponent": true,
    "createComponent": true,
    "getComponent": true,
    "renderComponent": true
  },
  "rules": {
    "indent": [2, 2, {"SwitchCase": 0}],
    "react/prefer-stateless-function": 0,
  },
  "parserOptions": {
    "sourceType": "module"
  }
}
